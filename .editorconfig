root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{md,txt}]
trim_trailing_whitespace = false

[*.{java,kt,kts,groovy}]
indent_style = space
indent_size = 4

[*.{xml,xsd}]
indent_style = space
indent_size = 2

[*.{yml,yaml,json}]
indent_style = space
indent_size = 2

[*.{ps1,psm1}]
indent_style = space
indent_size = 2
